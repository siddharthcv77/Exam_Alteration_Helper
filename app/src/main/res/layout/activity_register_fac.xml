<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register_fac">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/register_clipart_24dp"
        android:id="@+id/register_clipart"
        android:layout_centerHorizontal="true"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/register_clipart"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USERNAME  "
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:id="@+id/fn_text"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@+id/fn_text"
            android:id="@+id/un"
            android:hint="USERNAME"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PASSWORD  "
            android:layout_below="@+id/fn_text"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:id="@+id/head_text"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"


            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/un"
            android:id="@+id/ps"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/head_text"
            android:hint="PASSWORD"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone No.     "
            android:layout_below="@+id/head_text"
            android:textSize="20sp"

            android:fontFamily="sans-serif"
            android:id="@+id/age_text"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"


            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ps"
            android:id="@+id/phno"
            android:layout_toRightOf="@id/age_text"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:hint="PHONE NO."/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMAIL           "
            android:layout_below="@+id/phno"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:id="@+id/address_text1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phno"
            android:layout_toRightOf="@+id/address_text1"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/em"
            android:hint="EMAIL"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME           "
            android:layout_below="@+id/address_text1"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:id="@+id/name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/em"
            android:layout_toRightOf="@+id/name"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/ed_name"
            android:hint="NAME"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:textColor="#ffffff"
            android:backgroundTint="#543939"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:id="@+id/regbtn"
            android:layout_marginBottom="25dp"
            android:layout_below="@id/ed_name"
            android:onClick="reg"
            />

    </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>